{
  "expo": {
    "name": "kasir-pos",
    "slug": "kasir-pos",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "kasirpos",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.basofi.kasirpos",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Aplikasi memerlukan akses Bluetooth untuk menemukan dan menghubungkan perangkat printer dan scanner.",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth digunakan untuk berkomunikasi dengan perangkat kasir seperti printer dan scanner."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.BLUETOOTH_ADVERTISE"
      ],
      "package": "com.basofi.kasirpos"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "with-rn-bluetooth-classic",
        {
          "peripheralUsageDescription": "Allow myDevice to check bluetooth peripheral info",
          "alwaysUsageDescription": "Allow myDevice to always use bluetooth info",
          "protocols": [
            "com.basofi.kasirpos.p1",
            "com.basofi.kasirpos.p2"
          ]
        }
      ],
      "expo-font",
      "expo-web-browser",
      "with-rn-bluetooth-classic"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "513965f3-c2d4-4867-ba0e-fe27671a341d"
      }
    }
  }
}
